@model IEnumerable<PetStore.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Your Information</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("My Details", "Details")
</p>

@* this is the side bar *@
<div class="col-md-4">
    @Html.ActionLink("My Information", "Index") <br />
    @Html.ActionLink("My Details", "Details") <br />
    @Html.ActionLink("Billing Information", "CreateBilling") <br />
    @Html.ActionLink("Shipping Information", "CreateShipping") <br />
    @Html.ActionLink("Payment Information", "CreatePayment")
</div>

<div class="row">
    <div class="col-md-4">
        @* this is the table for the customer's basic information *@
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailAddress)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                </tr>
            }
        </table>
        <hr />

        @* this is the table for the customer's shipping information *@
        <h2>Shipping Information . . . </h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ShippingAddress.ShippingAddress1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShippingAddress.ShippingAddress2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShippingAddress.ShippingCity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShippingAddress.ShippingState)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShippingAddress.ShippingPostalCode)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippingAddress.ShippingAddress1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippingAddress.ShippingAddress2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippingAddress.ShippingCity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippingAddress.ShippingState)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippingAddress.ShippingPostalCode)
                    </td>
                </tr>
            }
        </table>
        <hr />

        @* this is the table for the customer's payment information *@
        <h2>Payment Information . . . </h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentInformation.CardNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentInformation.ExpirationMonth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentInformation.ExpirationYear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentInformation.CardPin)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentInformation.CardNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentInformation.ExpirationMonth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentInformation.ExpirationYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentInformation.CardPin)
                    </td>
                </tr>
            }
        </table>
        <hr />

        @* this is the table for the customer's billing information *@
        <h2>Billing Information . . . </h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BillingAddress.BillingAddress1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BillingAddress.BillingAddress2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BillingAddress.BillingCity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BillingAddress.BillingState)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BillingAddress.BillingPostalCode)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BillingAddress.BillingAddress1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BillingAddress.BillingAddress2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BillingAddress.BillingCity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BillingAddress.BillingState)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BillingAddress.BillingPostalCode)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
