@model IEnumerable<PetStore.Models.Customer>

@{
    ViewBag.Title = "Addresses";
    Layout = "~/Views/Shared/_SubLayout.cshtml";
}


<h2>Your Address Book . . . </h2> <br />

@* this is the table for the customer's shipping information *@
<h2>Shipping Addresses . . . </h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShippingAddress.ShippingAddress1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShippingAddress.ShippingAddress2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShippingAddress.ShippingCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShippingAddress.ShippingState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShippingAddress.ShippingPostalCode)
        </th>
        @if (User.IsInRole("Admin"))
        {
            <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingAddress.ShippingAddress1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingAddress.ShippingAddress2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingAddress.ShippingCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingAddress.ShippingState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingAddress.ShippingPostalCode)
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
        </tr>
    }
</table>
