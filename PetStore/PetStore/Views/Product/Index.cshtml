@model IEnumerable<PetStore.Models.ProductModels>

@{
    ViewBag.Title = "Shop";
}

<h2>Shop</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        @*20180828 added column for product images - kelsey*@
        <th>
            @Html.DisplayNameFor(model => model.ImageFilePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        @*20180827 added columns for price and category - kelsey*@
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @*20180827 changed display name for category to use display description*@
            @Html.DisplayNameFor(model => model.Category.Name)

        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*20180828 added column for product images - kelsey*@
        <td>
            @Html.Raw("<img src = \"" + item.ImageFilePath + "\" height=\"250\" width=\"150\" />")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        @*20180827 added columns for price and category - kelsey*@
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
