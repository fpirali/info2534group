@model PetStore.Models.CompleteOrderViewModel
@{
    ViewBag.Title = "CompleteOrder";
}

<h2>Thank you for shopping at the Pet Store!</h2>

<h5>Order Summary</h5>
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cart.Products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>    
</table>
@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary"})


